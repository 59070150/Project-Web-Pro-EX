<%- include('layouts/header'); %>
    <div class="container mt-5">
        <div class="title is-1">เลือกปีการศึกษาและเทอม</div>
        <div class="message is-success">
          <p> <%=(typeof alertMsg!='undefined')? alertMsg:''%> </p>
        </div>
        <form action="/semeter" method="POST">
          <div class="title is-3">ปีการศึกษาและเทอม</div>
          <div class="select">
            <select name="year" id="year">
              <option value="">ปีการศึกษา</option>
              <% var year = 2554; %>
              <% for (let i = 0; i <= 10; i++) { %>
                <option value="<% year; %>"><%= year; %></option>
                <% year++; %>
              <% } %>
            </select>
          </div>
          <div class="select">
            <select name="semeter" id="semeter">
              <option value="">เทอม</option>
              <option value="1">1</option>
              <option value="2">2</option>
            </select>
          </div>
          <input type="submit" value="Apply">
        </form>
<%- include('layouts/footer'); %>